<Window x:Class="ClientMessenger.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientMessenger"
        mc:Ignorable="d"
        Title="TestWindow" MinHeight="450" MinWidth="800" Width="800" Height="450" Background="#1f1e1f" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Width="350" Height="200" Background="#1f1e1f" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 75, 0, 0">

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Username" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBox x:Name="ChangeUsername" Width="100" Height="30" Margin="5"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="hashtag" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBox x:Name="Changehashtag" Width="100" Height="30" Margin="5"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Change" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 20, 0, 0"/>
        </StackPanel>


    </Grid>
</Window>
